<% if @posts.any? %>

  <%= render partial: "blogit/posts/post",
    collection: @posts,
    spacer_template: "blog_post_spacer",
    locals: { 
      show_comments_count: (Blogit.configuration.include_comments == :active_records) 
    }  %>
    
<% else %>

  <%= render partial: "blogit/posts/empty" %>

<% end %>

<%= render "pagination" %>
